@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    bool loggedin = false;
    string loggedin1 = "display:none";
    //unblur background if user is logged in
    if (User.Identity.IsAuthenticated)
    {
        loggedin = true;
        loggedin1 = "display:block";
    }
    Layout = "_LayoutAuth";
}



<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link rel="stylesheet" href="~/css/Quibbylogin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;300;400;500&display=swap" />
</head>

<body>
    <div class="quiby-login">
        <div class="group-parent" style="@loggedin">
            <div class="rectangle-parent">
                <div class="group-child"></div>
                <div class="group-item"></div>
                <div class="what-do-you">what do you want to ask</div>
                <img class="group-inner" alt="" src="~/public/ellipse-6@2x.png" />

                <div class="line-div"></div>
                <div class="submit-wrapper">
                    <div class="submit">Submit</div>
                </div>
            </div>
            <div class="rectangle-group">
                <div class="rectangle-div"></div>
                <img class="rectangle-icon" alt="" src="~/public/rectangle-76@2x.png" />

                <div class="group-child1"></div>
                <img class="group-inner" alt="" src="~/public/ellipse-7@2x.png" />

                <div class="lisa-morrison-parent">
                    <div class="lisa-morrison">Lisa Morrison</div>
                    <div class="pm">10/11/2023 | 10:03pm</div>
                </div>
                <div class="mohammed-aziz-owns">
                    Mohammed Aziz owns his bookstore in Rabat's medina since 1967. He
                    has over 4,000 books some of which he meticulously displays outside
                    everyday. He has read every single book, wether they're in Arabic,
                    French, English or Spanish. Do NOT ignore unexplained weight loss. I
                    have had more than
                </div>
                <img class="group-icon" alt="" src="~/Pages/public/group-178.svg" />


                <div class="see-image-after-container">
                    See Image after
                    <span class="login">Login</span>
                </div>
            </div>
            <div class="login-wrapper">
                <div class="login1">Login</div>
            </div>
            <div class="register">Register</div>

            <div class="group-div">
                <div class="rectangle-container">
                    <div class="group-child3"></div>
                    <div class="group-parent1">
                        <div class="books-parent">
                            <div class="books">Books</div>
                            <img class="book-saved-icon" alt="" src="~/public/booksaved.svg" />
                        </div>
                        <div class="visiting-travel-parent">
                            <div class="books">Visiting Travel</div>
                            <img class="global-icon" alt="" src="~/public/global.svg" />
                        </div>
                        <div class="business-parent">
                            <div class="books">Business</div>
                            <img class="status-up-icon" alt="" src="~/public/statusup.svg" />
                        </div>
                        <div class="health-parent">
                            <div class="books">Health</div>
                            <img class="heart-add-icon" alt="" src="~/public/heartadd.svg" />
                        </div>
                        <div class="technology-parent">
                            <div class="books">Technology</div>
                            <img class="monitor-icon" alt="" src="~/public/monitor.svg" />
                        </div>
                        <div class="science-parent">
                            <div class="books">Science</div>
                            <img class="microscope-icon" alt="" src="~/public/microscope.svg" />
                        </div>
                    </div>
                </div>
                <div class="topics">Topics</div>
            </div>
            <div class="group-parent2">
                <div class="rectangle-parent1">
                    <div class="group-child4"></div>
                    <div class="communities-parent">
                        <div class="books">Communities</div>
                        <img class="people-icon" alt="" src="~/public/people.svg" />
                    </div>
                    <div class="topics-parent">
                        <div class="books">Topics</div>
                        <img class="message-text-icon" alt="" src="~/public/vector.svg" />
                    </div>
                    <div class="content-policy-parent">
                        <div class="books">Content Policy</div>
                        <img class="note-icon" alt="" src="~/public/note.svg" />
                    </div>
                    <div class="private-policy-parent">
                        <div class="books">Private Policy</div>
                        <img class="bill-icon" alt="" src="~//public/bill.svg" />
                    </div>
                    <div class="group-child5"></div>
                </div>
                <div class="topics">Resources</div>
            </div>
        </div>
        <div class="header">
            <div class="header-child"></div>
            <img class="header-item" alt="" src="~/public/group-146.svg" />

            <div class="popular-parent">
                <div class="popular">Popular</div>
                <img class="ranking-icon" alt="" src="~/public/ranking.svg" />
            </div>
            <div class="home-parent">
                <div class="home">Home</div>
                <img class="home-icon" alt="" src="~/public/home.svg" />
            </div>
            <div class="all-parent">
                <div class="home">All</div>
                <img class="chart-icon" alt="" src="~/public/chart.svg" />
            </div>
            <div class="rectangle-parent2">
                <div class="group-child6"></div>
                <div class="search-quibby-parent">
                    <div class="search-quibby">Search Quibby</div>
                    <img class="search-normal-icon" alt="" src="~/public/searchnormal.svg" />
                </div>
            </div>
        </div>
 <!-- lOGIN PAGE  -->
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
           
            <div class="quiby-login-child"></div>
            <div class="rectangle-parent3">
                <div class="group-child7"></div>
                <div class="group-parent3">
                    <img class="group-child8" src="~/public/Group 1000002018.svg">
                    <!-- buttonlogin -->

                    @* <button type="submit"><a href="~/QuibbyLogin.cshtml" class="login2">Login</a></button> *@
                    <div class="forgot-password">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    </div>
                    <div class="welcome-to-quibby">Welcome to Quibby</div>
                    <div class="rectangle-parent5">
                        <input asp-for="Input.Email" id="Email" class="group-child10" name="Email" required autocomplete="Email"
                               aria-required="true" placeholder="Enter Email" />>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <img class="profile-icon" alt="" src="~/public/profile.png" />
                    </div>
                    <div class="rectangle-parent6">

                        <input asp-for="Input.Password" id="Password" class="group-child10" name="Password" required autocomplete="current-password"
                               aria-required="true" placeholder="Enter Password" class="group-inner" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <img class="profile-icon" alt="" src="~/public/lock.png" />

                    </div>
                                        <button id="login-submit" type="submit" class="login2">Login</button>
                </div>
                <div class="rectangle-parent7">
                    <div class="group-child12"></div>
                    <div class="dont-have-an-container">
                        <span class="dont-have-an">Don’t Have an Account? </span>
                        <span class="register1"><a asp-page="./Register">Register</a></span>
                    </div>
                </div>
                <div class="group-child13"></div>
                <div class="continue-with-parent">
                    <div class="continue-with">Continue With</div>
                    <div class="rectangle-parent8">
                        <div class="group-child14"></div>
                        <div class="continue-with-google">Continue with Google</div>
                        <img class="group-child15" alt="" src="~/public/Group 1000002655.png" />
                    </div>
                    <div class="rectangle-parent9">
                        <div class="group-child14"></div>
                        <img class="frame-icon" alt="" src="~/public/frame.svg" />

                        <div class="continue-with-apple">Continue with Apple</div>
                    </div>
                </div>
                <img class="group-child17" alt="" src="~/public/group-1.svg" />
            </div>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to log in.</h3>

            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

